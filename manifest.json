{
  "manifest_version": 3,
  "name": "Email Extractor",
  "version": "2.0",
  "description": "Extracts emails from webpages",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "action": {
    "default_popup": "scripts/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["scripts/content.js"]
  }]
}
